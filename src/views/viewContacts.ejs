<%-include('partials/_header');-%>

    <div class="container contactContainer">
        <div class="row">
            <div class="col-md-7">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <th>ID</th>
                            <th>Nombre</th>
                            <th>Email</th>
                            <th>Número Tel.</th>
                            <th>Acciones</th>
                        </thead>
                        <tbody>
                            <% if (data) {  %>
                            <% for(var i= 0; i < data.length; i++){ %>
                                <tr>
                                    <td><%= (i+1) %></td>
                                    <td>
                                        <%= data[i].name %> 
                                    </td>
                                    <td> <%= data[i].email %> </td>
                                    <td> <%= data[i].phone %> </td>
                                    <td>
                                        <a href="/delete/<%= data[i].id %>" class="btn btn-danger">Eliminar</a>
                                        <a href="/update/<%= data[i].id %>" class="btn btn-info">Editar</a>
                                    </td>
                                </tr>
                            <% } %>
                        <% } if (data == false)  {%>
                            <tr>
                                <td colspan="5">
                                    <div class="card text-center bg-light">
                                        <i class="fas fa-address-book fa-4x mt-2" style="color: #008080;"></i>
                                        <h1 class="text-dark">Empieza a agregar contactos !</h1>
                                    </div>
                                </td>
                            </tr>
                        <% } %>
                        </tbody>
                    </table>
                
            </div>
            <div class="col-md-5">
                <div class="card">
                    <div class="card-body">
                        <form action="/add" method="post">
                            <div class="form-group">
                                <input type="text" name="name" placeholder="Nombre" class="form-control" required>
                            </div>
        
                            <div class="form-group mt-2">
                                <input type="text" name="email" placeholder="Correo Electronico" class="form-control">
                            </div>
        
                            <div class="form-group mt-2">
                                <input type="text" name="phone" placeholder="Número Telefonico" class="form-control">
                            </div>
                            <button type="submit" class="btn btn-light mt-3" style="background-color: #05a3a3;">GUARDAR CONTACTO</button>
                            <a href="/" class="btn btn-outline-secondary mt-3">Volver al inicio <i class="fas fa-angle-double-right fa-1x"></i></a>
                        </form>
                        
                    </div>
                </div>

            </div>
        </div>
    </div>



    <!-- Footer -->
    <footer style="position: fixed;bottom: 0; width: 100%; margin-top: 20px;" >


        <!-- Footer Elements -->
        <div class="container">
    
        <!-- Social buttons -->
        <ul class="list-unstyled list-inline text-center">
            <li class="list-inline-item">
            <a class="btn-floating btn-dribbble mx-1" href="https://github.com/AlexDurango">
                <i class="fab fa-github"> </i>
            </a>
            </li>
        </ul>
        <!-- Social buttons -->
    
        </div>
        <!-- Footer Elements -->
    
        <!-- Copyright -->
        <div class="footer-copyright text-center py-3" >Hecho con  <i class="fas fa-heart"></i>
        </div>
        <!-- Copyright -->  
    </footer>
  
